enum AgentType {
  website
  chrome_ext
  slack
  telegram
  facebook
  whatsapp
  instagram
  phone

  @@schema("ai")
}

enum AgentStatus {
  active
  training
  deactivated

  @@schema("ai")
}

model Agents {
  id                  String                   @id @default(uuid())
  name                String
  description         String?
  type                AgentType
  avatar              String?
  persona             String
  organizationId      String?
  organization        Organization?            @relation(fields: [organizationId], references: [id])
  links               AgentWebLinks[]          @relation()
  authorizedDomains   AuthorizedAgentDomains[] @relation()
  conversations       Conversation[]           @relation()
  publicConversations PublicConversation[]     @relation()
  createdAt           DateTime                 @default(now())
  updatedAt           DateTime                 @updatedAt
  status              AgentStatus              @default(active)

  @@map("agents")
  @@schema("ai")
}
